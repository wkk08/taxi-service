# ============================================
# 出租车服务 - 环境变量配置
# ============================================

# 应用配置
APP_NAME="Taxi Service"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True
LOG_LEVEL="INFO"

# Flask配置
SECRET_KEY="change-this-in-production-to-a-random-secret-key"
JWT_SECRET_KEY="change-this-too-in-production-to-another-random-key"
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24小时，单位：秒

# 数据库配置
DATABASE_URL="postgresql://postgres:password@localhost:5432/taxi_db"
# 生产环境示例:
# DATABASE_URL="postgresql://username:password@host:port/database"

# Redis配置
REDIS_URL="redis://localhost:6379/0"
# 生产环境示例:
# REDIS_URL="redis://:password@host:port/database"

# CORS配置
CORS_ORIGINS="http://localhost:3000,http://localhost:5000"

# 业务配置
MAX_RIDE_DISTANCE_KM=50
DEFAULT_RADIUS_KM=5
ESTIMATED_FARE_PER_KM=2.5
BASE_FARE=3.0
MINIMUM_FARE=5.0

# 位置服务配置
DEFAULT_CITY="New York"
DEFAULT_COUNTRY="USA"

# 通知配置
ENABLE_EMAIL_NOTIFICATIONS=False
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
NOTIFICATION_EMAIL_FROM="noreply@taxiservice.com"

# 监控配置
ENABLE_METRICS=True
METRICS_PORT=9090